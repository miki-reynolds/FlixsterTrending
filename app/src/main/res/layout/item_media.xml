<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_media_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/media_image"
        app:layout_constraintDimensionRatio="7:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/item_media_title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_media_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:typeface="serif"
        android:textColor="@color/material_dynamic_neutral_variant90"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="ATTACK ON TITAN" />

</androidx.constraintlayout.widget.ConstraintLayout>